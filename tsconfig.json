{
  "compilerOptions": {
    /* Language and environment */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* JS/TS behavior */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* Module system */
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* React / Next */
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts"
  ],

  "exclude": ["node_modules"]
}

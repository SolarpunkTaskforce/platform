{
  "compilerOptions": {
    /* ================================
       Language & Environment
       ================================ */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* ================================
       TypeScript Behavior
       ================================ */
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* ================================
       Module Resolution
       ================================ */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ================================
       React / Next.js
       ================================ */
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ================================
       Path Aliases
       ================================ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ================================
       Safety / Compatibility
       ================================ */
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts"
  ],

  "exclude": ["node_modules", "supabase/functions"]
}
